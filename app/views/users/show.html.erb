<div class="row">
  <div class="content-container col-center">
    <div class="user-info col-md-6 col-center">
      <h1 class="page-title"><%= @user.name %></h1>
      <% if current_user?(@user) %>
        <%= @user.email %>
        <%= link_to '編集', edit_user_path(@user.id) %>  
      <% end %>
      <div class="users-picture row col-center">
        <% @user.pictures.each do |picture| %>
          <ul>
            <li class="col-md-12"><%= image_tag(picture.image.url) %></li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
