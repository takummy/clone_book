<%= form_with(model: @picture, url: new_or_edit_pictures, local: true) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    
    <div class="form-group">
        <%= f.label :content %>
        <%= f.text_field :content %>
    </div>

    <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
    </div>

    <div class="submit-button">
        <%= f.submit %>
    </div>
<% end %>
